<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <Version>1.0.0.4</Version>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>Image Chipper</Title>
    <Authors>Matt Feemster</Authors>
    <Company>None</Company>
    <Description>A C# library to split large images into smaller ones using the ImageSharp library.</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/mfeemster/ImageChipper</PackageProjectUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/mfeemster/ImageChipper</RepositoryUrl>
    <PlatformTarget>x64</PlatformTarget>
    <PackageIcon>ImageChipper.png</PackageIcon>
    <ApplicationIcon>..\ImageChipper.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="SixLabors.ImageSharp" Version="3.1.12" />
    <Content Include="..\ImageChipper.ico" Link="ImageChipper.ico" />
    <None Include="..\ImageChipper.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

</Project>
